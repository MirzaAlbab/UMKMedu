<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.diskusi.DiskusiFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diskusi"
        android:textColor="@color/heading"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kategori"
        android:text="Kategori"
        android:textColor="@color/header"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.001"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/kategori"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Button1"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            android:text="Bisnis Makanan"
            android:textSize="12dp"
            android:textColor="#7A7575"
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/Button2"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="#7A7575"
            android:backgroundTint="@color/white"
            android:text="Bisnis Kerajinan"
            android:textAlignment="textStart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/linear2"
        app:layout_constraintTop_toTopOf="@id/linear1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Button3"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:text="Bisnis Hasil Laut"
            android:textSize="12dp"
            android:textColor="#7A7575"
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/Button4"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:textColor="#7A7575"
            android:backgroundTint="@color/white"
            android:text="Bisnis Kerajinan"
            android:textAlignment="textStart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/linear3"
        app:layout_constraintTop_toTopOf="@id/linear2"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Button5"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="90dp"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:text="Bisnis Perabotan"
            android:textSize="12dp"
            android:textColor="#7A7575"
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/Button6"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:textColor="#7A7575"
            android:backgroundTint="@color/white"
            android:text="Bisnis Fashion"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selengkapnya"
        android:textColor="@color/heading"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginRight="50dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/linear3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/diskusi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diskusi"
        android:textColor="@color/header"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/linear3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mulai diskusi"
        android:layout_marginTop="185dp"
        android:textColor="@color/header"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="50dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/linear3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="83dp"
        android:background="#FFFFFF"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/linear3"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/user1"
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/batik"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan"
                android:textSize="12dp"
                android:textColor="@color/header"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kemarin saya mencoba membuka rumah
makan, tapi belum begitu banyak pembeli
apakh ada saran untuk saya?"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/user2"
            android:layout_marginTop="100dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/batik"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dev"
                android:textSize="12dp"
                android:textColor="@color/header"
                android:layout_marginTop="100dp"
                android:textStyle="bold"
                android:layout_marginLeft="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kemarin saya mencoba membuka rumah
makan, tapi belum begitu banyak pembeli
apakh ada saran untuk saya?"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</android.support.constraint.ConstraintLayout>