<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.artikel.BacaArtikel">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="UMKM Batik semakin populer"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@+id/judul"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/batik" />

    <TextView
        android:layout_below="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:justificationMode="inter_word"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Diam dolor turpis in tortor. Amet,risus lacus tincidunt augue risus sed turpis euismod.Dui dui, habitasse phasellus nisi sit eu. Augue proinsagittis adipiscing magnis tempor gravida. Turpismassa diam placerat nec. Sed egestas at commodo nuncfacilisis faucibus quis.
      "
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>
</RelativeLayout>