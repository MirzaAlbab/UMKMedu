<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        tools:ignore="MissingConstraints">
        <SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded2" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artikel Teratas"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#22577A"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:id="@+id/headline"
            android:layout_height="320dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/batik"
                tools:ignore="SpeakableTextPresentCheck" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="10dp"
                android:text="UMKM Batik Main Populer"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="205dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="14dp"
                android:text="@string/deskripsi"
                android:textColor="#888787" />

            <TextView
                android:id="@+id/readmore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="275dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                android:textSize="12dp"
                android:text="Baca selengkapnya>>"
                android:textColor="#3C3E40" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diskusi Teratas"
            android:layout_marginTop="15dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#22577A"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button1"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:text="      bisnis makanan"
            android:textAlignment="textStart"
            android:textColor="#7A7575"
            android:textSize="12dp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/Button2"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:text="      bisnis kerajinan"
            android:textAlignment="textStart"
            android:textColor="#7A7575"
            android:textSize="12dp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>